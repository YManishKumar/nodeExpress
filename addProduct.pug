doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous")
  
    body 
        div.row
            div.col-md-12
                nav.navbar.navbar-expand-lg.navbar-light.bg-warning
                    div.collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.mr-auto
                          li.nav-item
                            a.nav-link.text-info(href="/admin/add-product") Add Product
          
        br
        div.container  
           div.row 
              div.col-md-5
                
                   form(action="/admin/product",method="POST")
                        div.mb-3
                            label.form-label(for="productName" ) Product Name
                            input.form-control#productName(type="text",name="product" aria-describedby="productName")  
                       
                            br
                            div(style="text-align : center")
                            button.btn.btn-primary.btn-sm(type="submit") Save
                  
                                    
                    

              
    
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")